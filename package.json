{
  "name": "@appquality/craft-blocks",
  "version": "0.1.3",
  "main": "build/index",
  "dependencies": {
    "@appquality/appquality-design-system": "^0.1.84",
    "@craftjs/core": "0.1.0-beta.19",
    "@draft-js-plugins/editor": "^4.1.0",
    "@draft-js-plugins/static-toolbar": "^4.1.1",
    "draft-js": "^0.11.7",
    "react": "^17.0.2",
    "react-contenteditable": "^3.3.5",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "copy-files": "copyfiles -u 2 src/components/**/*.css build/ && copyfiles package*.json build/ && cp -r node_modules/ build/ ",
    "start": "react-scripts start",
    "build": "npx babel src/components -d build && npm run copy-files",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "clean": "rimraf build/",
    "release": "npx auto shipit --base-branch=main"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "copyfiles": "^2.4.1"
  }
}
